<p>Books#show</p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render '/sidebar' %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@post_book.user_id) do %>
                <%= image_tag @post_book.user.get_image, size: "100x100" %><br />
                <%= @post_image.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@post_book.id) do %>
                <%= @post_book.title %>
              <% end %>
            </td>
            <td>
              <%= @post_book.body %>
            </td>
            <td>
              <%= link_to 'Edit', edit_book_path(@post_book.id), class: 'btn btn-sm btn-success' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@post_book), method: :destroy, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>