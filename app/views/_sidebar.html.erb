<!-- 呼び出し先 users index show, books index show -->
<div class="col-md-3">
  <h2>User info</h2>

  <%= image_tag current_user.get_image , size: "100x100" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: @post_book do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :opinion %> <!-- 不具合が出るかも --> 
      <%= f.text_area :body, class: 'form-control' %>
    </div>
    <%= f.submit 'Create Book', class: 'btn btn-success' %>
  <% end %>
</div>
